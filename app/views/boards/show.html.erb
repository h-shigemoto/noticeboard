<p id="notice"><span class="tag tag-success"><%= notice %></span></p>
<% if alert.present? %>
  <div id="error_explanation">
    <ul>
    <% alert.each do |message| %>
      <li><span class="tag tag-danger"><%= message %></span></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1><%= @board.title %></h1>

<br>

<!-- board details -->
<div class="card">
  <h4 class="card-header">Board Details</h4>
  <div class="card-block">
    <table class="table table-striped table-bordered">
      <tr>
        <td><b><%= @board.title %></b></td>
        <td>Name&nbsp;:&nbsp;<%= @board.name %></td>
        <td>Created&nbsp;:&nbsp;<%= @board.created_at %></td>
      </tr>
      <tr style="height: 8rem">
        <td colspan="3"><%= @board.content %></td>
      </tr>
    </table>
  </div>
</div>

<br>

<!-- board reply list -->
<div class="card">
  <h4 class="card-header">Board Replies</h4>
  <div class="card-block" style="max-height: 40rem;overflow: scroll">
    <% @board.board_replies.each do |reply| %>
      <table class="table table-striped table-bordered">
        <tr>
          <td><%= reply.rep_no %></td>
          <td>Name&nbsp;:&nbsp;<%= reply.name %></td>
          <td>Created&nbsp;:&nbsp;<%= reply.created_at %></td>
        </tr>
        <tr style="height: 8rem">
          <td colspan="3"><%= reply.content %></td>
        </tr>
        <tr>
          <td>[&nbsp;<%= link_to 'Edit', edit_board_board_reply_path(@board, reply) %>&nbsp;]</td>
          <td colspan="2">[&nbsp;<%= link_to 'Destroy', board_board_reply_path(@board, reply), method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;]</td>
        </tr>
      </table>
    <% end %>
  </div>
</div>

<br>

<!-- input reply -->
<div class="card">
  <h4 class="card-header">New Reply</h4>
  <div class="card-block">
    <%= render 'board_replies/form', board_reply: @board_reply, url: board_board_replies_path(@board) %>
  </div>
</div>

[&nbsp;<%= link_to 'Edit', edit_board_path(@board) %>&nbsp;]&nbsp;&nbsp;[&nbsp;<%= link_to 'Back', boards_path %>&nbsp;]
