<p id="notice"><%= notice %></p>

<h1>Simple Rails Boards</h1>

<br>

<!-- board link list -->
<div class="card">
  <h4 class="card-header">Boards Links</h4>
  <div class="card-block" style="max-height: 20rem">
    <% @boards.each do |board| %>
      &nbsp;<%= link_to "[#{board.title}]", board %>
    <% end %>
  </div>
</div>

<br>

<!-- board search -->
<div class="card">
  <h4 class="card-header">Boards Search</h4>
  <div class="card-block">
    <form>
      Title&nbsp;:&nbsp;<input id="search_title" class="form-control" style="width: 35rem;display: inline;margin-right: 1rem" type="text" >
      <button type="button" class="btn btn-outline-primary" onclick='onsearch()' >Search</button>
    </form>
  </div>
</div>

<br>

<!-- board list -->
<div class="card">
  <h4 class="card-header">Boards List</h4>
  <div class="card-block" style="max-height: 40rem;overflow: scroll">
    <% @boards.each do |board| %>
      <table class="table table-striped table-bordered">
        <tr>
          <td><b><%= board.title %></b></td>
          <td>Name&nbsp;:&nbsp;<%= board.name %></td>
          <td>Created&nbsp;:&nbsp;<%= board.created_at %></td>
        </tr>
        <tr style="height: 8rem">
          <td colspan="3"><%= board.content %></td>
        </tr>
        <tr>
          <td><%= link_to 'Detail', board %></td>
          <td><%= link_to 'Edit', edit_board_path(board) %></td>
          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Board', new_board_path %>
<br><br>

<!-- javascript -->
<script type="text/javascript">

  // search board by input title
  function onsearch() {
    var search_title = $('#search_title').val();
    alert(search_title);
  }

</script>